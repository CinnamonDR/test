
<div class="container">
  <h2>Crear Cuenta</h2>
  <form action="/register/add" method="POST">
    <div class="form-group">
      <label for="username">Nombre de usuario:</label>
      <input type="text" id="username" name="username" required>
    </div>
    <div class="form-group">
      <label for="email">Correo Electrónico:</label>
      <input type="email" id="email" name="email" required>
    </div>
    <div class="form-group">
      <label for="password">Contraseña:</label>
      <input type="password" id="password" name="password" required>
    </div>
    <div class="form-group">
      <label for="confirm-password">Confirmar Contraseña:</label>
      <input type="password" id="confirm-password" name="confirm-password" required>
    </div>
    <button type="submit" class="submit-btn">Registrarse</button>
  </form>

  <% if (locals.message) { %>
    <p><%= message %></p>
  <% } %>
</div>

<style>
  /* Adaptación de estilos de tu CSS existente y la imagen de login */
  body {
    font-family: Arial, sans-serif;
    padding: 40px;
    background-color: #f0f0f0; /* Un fondo claro similar a la imagen */
  }

  .container {
    max-width: 400px; /* Ancho adaptado al formulario de registro */
    margin: 0 auto;
    padding: 30px; /* Más padding */
    background: #fff;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1); /* Sombra */
    border-radius: 12px; /* Borde redondeado */
    text-align: center; /* Centrar contenido */
  }

  h2 {
    color: #ff4081; /* Un color vibrante para el título, similar al de la imagen */
    margin-bottom: 20px;
  }

  .form-group {
    margin-bottom: 15px;
    text-align: left; /* Alinear etiquetas y inputs a la izquierda */
  }

  .form-group label {
    display: block;
    margin-bottom: 8px; /* Más espacio debajo de la etiqueta */
    font-weight: bold;
    color: #555;
  }

  .form-group input {
    width: 100%;
    padding: 12px; /* Más padding en los inputs */
    border: 1px solid #ddd;
    border-radius: 25px; /* Bordes más redondeados, similar a la imagen */
    box-sizing: border-box;
    font-size: 1rem; /* Tamaño de fuente */
  }

  .submit-btn {
    background-color: #ff4081; /* Color del botón de la imagen */
    color: white;
    padding: 12px 20px; /* Padding del botón */
    border: none;
    border-radius: 25px; /* Bordes redondeados del botón */
    cursor: pointer;
    font-size: 1.1rem; /* Tamaño de fuente del botón */
    transition: background-color 0.3s ease;
    width: 100%; /* Ancho completo del botón */
    margin-top: 10px; /* Espacio arriba del botón */
  }

  .submit-btn:hover {
    background-color: #e03974; /* Color al pasar el mouse */
  }
</style>